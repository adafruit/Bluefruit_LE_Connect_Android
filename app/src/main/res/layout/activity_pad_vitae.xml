<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/goalText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/goal_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/standText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/standText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/stand_text"
        app:layout_constraintLeft_toRightOf="@+id/goalText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/goalText" />

    <EditText
        android:id="@+id/goalField"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/standText"
        app:layout_constraintLeft_toLeftOf="@+id/goalText" />

    <EditText
        android:id="@+id/standField"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/goalField"
        app:layout_constraintLeft_toLeftOf="@+id/standText" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/standField"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/graph"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageButton
        android:id="@+id/BtnUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:tag="5"
        app:srcCompat="@drawable/pad_arrow_button_up"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:tag="6"
        app:srcCompat="@drawable/pad_arrow_button_down"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/BtnUp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/Btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="2"
        android:layout_row="0"
        android:tag="1"
        android:text="@string/ctrl_minHeight"
        app:layout_constraintTop_toTopOf="@+id/BtnUp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/Btn2"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/Btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="3"
        android:layout_marginRight="16dp"
        android:layout_row="0"
        android:tag="3"
        android:text="@string/ctrl_minPref"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="29dp"
        app:layout_constraintTop_toTopOf="@+id/Btn1"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/Btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="2"
        android:layout_row="1"
        android:tag="2"
        android:text="@string/ctrl_maxHeight"
        app:layout_constraintTop_toTopOf="@+id/btnDown"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/Btn4"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/Btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="3"
        android:layout_row="1"
        android:tag="4"
        android:text="@string/ctrl_maxPref"
        app:layout_constraintTop_toTopOf="@+id/Btn3"
        android:layout_marginTop="1dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
